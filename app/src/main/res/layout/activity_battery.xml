<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_battery_top"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:background="@color/colorPrimaryDark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="20dp"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:layout_weight="1">

            <pers.victor.androiddemos.view.waveview.WaveView
                android:id="@+id/wv_battery_level"
                android:layout_width="80dp"
                android:layout_height="150dp"
                android:layout_centerInParent="true"
                android:background="@drawable/battery_empty"
                android:paddingTop="10dp"
                app:progress="80"
                app:wave_height="middle"
                app:wave_hz="normal"
                app:wave_length="middle" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="30dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="剩余电量"
                android:textColor="@color/white1"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_battery_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/white1"
                    android:textSize="60sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:text="%"
                    android:textColor="@color/white1"
                    android:textSize="16sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_battery_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="充电中 (适配器充电)"
                android:textColor="@color/white1"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingEnd="28dp"
        android:paddingStart="30dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="健康状况"
            android:textColor="@color/white1"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_battery_detail_health"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="健康状况"
            android:textColor="@color/white1"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingEnd="28dp"
        android:paddingStart="30dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="电池温度"
            android:textColor="@color/white1"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_battery_detail_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="电池温度"
            android:textColor="@color/white1"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingEnd="28dp"
        android:paddingStart="30dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="电池电压"
            android:textColor="@color/white1"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_battery_detail_voltage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="电池电压"
            android:textColor="@color/white1"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingEnd="28dp"
        android:paddingStart="30dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="电池工艺"
            android:textColor="@color/white1"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_battery_detail_technique"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="电池工艺"
            android:textColor="@color/white1"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>
