<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@color/black2">

    <!--<demos.view.tetris.TetrisView-->
    <!--android:id="@+id/tetris_view"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_marginBottom="10dp"-->
    <!--android:layout_marginEnd="10dp"-->
    <!--android:layout_marginStart="10dp"-->
    <!--android:visibility="gone" />-->

    <demos.view.SnakeView
        android:id="@+id/snake_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp" />


    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/iv_snake_up"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:padding="20dp"
            android:rotation="90"
            android:src="@drawable/back_white"
            android:tint="@color/green2" />

        <ImageView
            android:id="@+id/iv_snake_down"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:padding="20dp"
            android:rotation="-90"
            android:src="@drawable/back_white"
            android:tint="@color/green2" />

        <ImageView
            android:id="@+id/iv_snake_left"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:padding="20dp"
            android:src="@drawable/back_white"
            android:tint="@color/green2" />

        <ImageView
            android:id="@+id/iv_snake_right"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:padding="20dp"
            android:rotation="180"
            android:src="@drawable/back_white"
            android:tint="@color/green2" />
    </RelativeLayout>

</RelativeLayout>
