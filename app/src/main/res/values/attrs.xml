<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="AutoImageView">
        <attr name="proportion_width" format="integer" />
        <attr name="proportion_height" format="integer" />
        <attr name="loading_style">
            <enum name="arc" value="1" />
            <enum name="sweep" value="2" />
            <enum name="none" value="0" />
        </attr>
    </declare-styleable>
    <declare-styleable name="FixedFlowLayout">
        <attr name="columns_per_line" format="integer" />
        <attr name="single_selected" format="boolean" />
        <attr name="horizontal_spacing" format="dimension" />
        <attr name="vertical_spacing" format="dimension" />
        <attr name="child_gravity" format="integer">
            <flag name="center" value="17" />
            <flag name="top" value="48" />
            <flag name="bottom" value="80" />
            <flag name="start" value="3" />
            <flag name="end" value="5" />
            <flag name="center_vertical" value="16" />
            <flag name="center_horizontal" value="1" />
        </attr>
    </declare-styleable>
    <!--圆形图片文字增强-->
    <declare-styleable name="CircleTextImageView">
        <attr name="citv_border_width" format="dimension" />
        <attr name="citv_border_color" format="color" />
        <attr name="citv_border_overlay" format="boolean" />
        <attr name="citv_fill_color" format="color" />
        <!--增强文字属性-->
        <attr name="citv_text_text" format="string" />
        <attr name="citv_text_color" format="color" />
        <attr name="citv_text_size" format="dimension" />
        <attr name="citv_text_padding" format="dimension" />
    </declare-styleable>

    <declare-styleable name="CycleViewPagerParent">
        <attr name="proportionHeight" format="integer" />
        <attr name="proportionWidth" format="integer" />
        <attr name="slideCycle" format="boolean" />
        <attr name="slideAutomatic" format="boolean" />
        <attr name="slideCycleTime" format="integer" />
        <attr name="showIndicator" format="boolean" />
        <attr name="indicatorMarginBottom" format="dimension" />
    </declare-styleable>
</resources>